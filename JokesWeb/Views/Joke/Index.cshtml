@model IEnumerable<Joke>
@{
   ViewData["Title"] = "Index";
}

<div class="container p-3">
   <div class="row pt-4">
      <div class="col-6">
         <h2 class="text-primary">Jokes List</h2>
      </div>
      <div class="col-6 text-end">
         <a asp-asp-controller="Jokes" asp-action="Create" class="btn btn-primary">
            Create new Joke
         </a>
      </div>
   </div>
</div>


<table class="table table-bordered table-striped" style="width:100%">
   <thead>
      <tr>
         <th>
            Joke Question
         </th>
         <th>
            Joke Answer
         </th>
      </tr>
   </thead>
   <tbody>
      @foreach (var obj in Model) {
         <tr>
            <th width="40%">
               @obj.JokeQuestion
            </th>
            <th width="40%">
               @obj.JokeAnswer
            </th>
         </tr>
      }
   </tbody>
</table>

 